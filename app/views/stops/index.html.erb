<p id="notice"><%= notice %></p>

<h1> Stops List</h1>

<table>
  <thead>
    <tr>
      <th>ID RUTA</th>
      <th>NID</th>
      <th>LATITUDE</th>
      <th>LONGITUDE</th>
      <th>ARRIVES AT</th>
      <th>DEPARTS AT</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stops.each do |stop| %>
      <tr>
        <td><%= stop.id_ruta %></td>
        <td><%= stop.nid %></td>
        <td><%= stop.latitude %></td>
        <td><%= stop.longitude %></td>
        <td><%= stop.arrives_at %></td>
        <td><%= stop.departs_at%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<div>
<h4>Let's see the Stop</h4>
<%= link_to 'Back', uploads_path %>
</div>
